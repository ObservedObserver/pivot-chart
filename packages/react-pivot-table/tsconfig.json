{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "esnext",
    "lib": ["esnext.array", "es2019", "dom", "es6"],
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [ "node_modules", "functions" ],
  "include": ["src"]
}